@{
    ViewData["Title"] = "Create Contact";
}

<h1>Create Contact</h1>

<div class="row">

    <div class="col-sm-5">

        <form asp-controller="ContactList" asp-action="ContactCreate" method="POST">
            <div class="staticFormContent">
                 <div class="form-group">
                    <input asp-for="FullName" type="text" class="form-control" placeholder="Full Name">
                </div>
                
                <div class="form-group">
                    <input asp-for="NickName" type="text" class="form-control" placeholder="Nick Name">
                </div>

                <div class="form-group">
                    <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                </div>

                <div class="form-group">
                    <input asp-for="Website" type="text" class="form-control" placeholder="Website">
                </div>

                <div class="form-group">
                    <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date Of Birth">
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-10">
                            <input asp-for="Phones[].Phone" type="text" class="form-control" placeholder="Phone Number">
                        </div>
                        <div class="col-md-2"><i id="addPhone" class="fa fa-plus-circle"></i></div>
                    </div>
                </div>
            </div>
           
            <button type="submit" class="btn btn-primary">Sign in</button>

        </form>

    </div>

</div>